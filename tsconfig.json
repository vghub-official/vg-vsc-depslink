{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2021"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@root": ["./src"],
      "@root/*": ["./src/*"] // 要使用别名下的模块的，配置这个。
    },
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "test"]
}
